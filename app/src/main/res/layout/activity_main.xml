<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maslu.gradesystem.MainActivity"
    android:background="@drawable/bg_new"
    >


    <Button
        android:id="@+id/button1"
        android:layout_width="262.333dp"
        android:background="@drawable/login_button"
        android:layout_height="46.250dp"
        android:onClick="login_home"
        tools:layout_editor_absoluteX="61dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="50dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="89.333dp"
        android:background="@drawable/forgot_password"
        android:layout_height="11.30dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="140dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="424dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="165dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="125dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteY="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="230dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorLink="@android:color/background_light"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="226dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="286dp" />


</RelativeLayout>
